{
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-shadow": "off",
    "no-console": "off"
  },
  "extends": "airbnb-base",
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "import/no-dynamic-require": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "prefer-destructuring": "off",
        "no-undef-init": "off"
      }
    }
  ]
}
